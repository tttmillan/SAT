@model IEnumerable<SAT.DATA.EF.Course>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <h2 class="newview">Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create", "Courses", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CourseName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourseDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreditHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Curriculum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CourseDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreditHours)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Curriculum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.CourseId }, new { @class = "btn btn-warning" })
                    @Html.ActionLink("Details", "Details", new { id = item.CourseId }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Deactivate", "Delete", new { id = item.CourseId }, new { @class = "btn btn-danger" })
                    @Html.ActionLink("Reactivate", "Reactivate", new { id = item.CourseId }, new { @class = "btn btn-success" })
                </td>
            </tr>
        }

    </table>
</div>